<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Jeu de Morpion</title>
</head>
<body>
  <h1>Jeu de Morpion</h1>
  <p>Joueur courant : <strong><%= currentPlayer %></strong></p>

  <form method="POST" action="/play">
    <table border="1" cellspacing="0" cellpadding="10">
      <% for (let i = 0; i < 3; i++) { %>
        <tr>
          <% for (let j = 0; j < 3; j++) { 
            const index = i * 3 + j;
            const value = gameState[index];
          %>
            <td style="text-align: center;">
              <% if (value) { %>
                <strong><%= value %></strong>
              <% } else { %>
                <input type="radio" name="cell" value="<%= index %>">
              <% } %>
            </td>
          <% } %>
        </tr>
      <% } %>
    </table>
    <br>
    <button type="submit">Jouer</button>
  </form>
</body>
</html>

